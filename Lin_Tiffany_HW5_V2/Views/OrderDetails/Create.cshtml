@model Lin_Tiffany_HW5_V2.Models.OrderDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OrderDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="OrderDetails" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Order.OrderID)


            <div class="form-group">
                <label class="control-label">Products:</label>
                @Html.DropDownList("SelectedProduct", (SelectList)ViewBag.AllProducts, new { @class = "form-control" })
            </div>


            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add to Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Orders" asp-route-id="@Model.Order.OrderID">Back to List</a>
</div>

